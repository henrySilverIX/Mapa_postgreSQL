// This is your Prisma schema file,

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//Modelos ou tabelas do banco

model Continente {
  id        Int    @id @default(autoincrement())
  nome      String
  descricao String
  paises    Pais[]
}

model Pais {
  id             Int        @id @default(autoincrement())
  codigoISO3    String     @unique
  nome           String
  populacao      Int
  idioma_oficial String
  moeda          String

  continenteId   Int
  continente     Continente @relation(fields: [continenteId], references: [id])

  cidades Cidades[]
}

model Cidades {
  id        Int    @id @default(autoincrement())
  nome      String
  populacao Int
  latitude  Float
  longitude Float

  pais   Pais @relation(fields: [paisId], references: [id])
  paisId Int
}
